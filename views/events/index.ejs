<% include ../partials/header %>

<div class="container bg-light">
   <header class="row justify-content-between align-items-center">
      <div>
         <h1 class="display-3">Tapahtumat</h1>
      </div>
      <div>
         <a class="btn btn-success btn-lg" href="/events/new">
            <i class="fas fa-plus"></i> Lisää Tapahtuma
         </a>
      </div>
   </header>
   <hr>

   <div class="card-columns">
      <% events.forEach(event => { %>
      <div class="card thumbnail shadow-sm">
         <a href="/events/<%= event._id %>">
            <% if (event.image) { %>
            <img class="card-img-top" src="<%= event.image %>" alt="">
            <% } else { %>
            <img class="card-img-top" src="/img/no_img.png" alt="">
            <% } %>
         </a>
         <div class="card-body">
            <a href="/events/<%= event._id %>">
               <h5 class="card-title"><%= event.name %></h5>
            </a>
            <p class="card-text"><%= event.date %> @ <%= event.location %></p>
            <p class="card-text"><%= event.tickets %></p>
         </div>
         <div class="card-footer">
            <a href="/events/<%= event._id %>" class="btn col-12 btn-sm btn-outline-dark">Avaa Tapahtuma</a>
         </div>
      </div>
      <% }) %>
   </div>

</div>

<% include ../partials/footer %>